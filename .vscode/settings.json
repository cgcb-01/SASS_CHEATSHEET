{
  "liveServer.settings.port": 5501,

  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "sideBar.background": "#000000",
    "activityBar.background": "#000000",
    "editor.lineHighlightBackground": "#000000",
    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#000000",
    "statusBar.background": "#000000",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.debuggingBackground": "#000000",
    "panel.background": "#000000",
    "editorGutter.background": "#000000",
    "tab.activeBackground": "#000000",
    "tab.inactiveBackground": "#000000",
    "editorGroupHeader.tabsBackground": "#000000",
    "editorGroup.emptyBackground": "#000000",
    "activityBar.foreground": "#ffffff", // ← icons like Explorer, Git
    "activityBar.inactiveForeground": "#888888", // ← dimmed icons
    "sideBar.foreground": "#ffffff", // ← text in sidebar
    "activityBarBadge.background": "#ffcc00", // optional: yellow badges
    "activityBarBadge.foreground": "#000000"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "entity.name.tag.html",
        "settings": {
          "foreground": "#ff6d6d" // pink tags
        }
      },
      {
        "scope": "variable.other.readwrite.js",
        "settings": {
          "foreground": "#ffce6c" // orange vars
        }
      },
      {
        "scope": [
          "comment.line.double-slash.js", // for JS //
          "comment.block.documentation.jsdoc", // for /** */
          "comment.block.html", // for <!-- -->
          "comment.line", // general line comment
          "comment.block", // general block comment
          "punctuation.definition.comment" // the symbols like // or <!--
        ],
        "settings": {
          "foreground": "#0c940c" // green
        }
      },
      {
        "scope": [
          "entity.other.attribute-name.class.html", // 'class' attribute itself
          "string.quoted.double.html", // general string
          "meta.attribute.class.html", // HTML class attribute value
          "string.quoted.double.html meta.attribute.class.html", // class name inside quotes
          "string.quoted.single.html meta.attribute.class.html"
        ],
        "settings": {
          "foreground": "#639fff" // bright cyan for class names
        }
      },
      {
        "scope": [
          "support.type.property-name.css", // CSS properties
          "support.type.property-name.scss", // SCSS properties
          "support.type.property-name.less", // If using LESS
          "meta.property-name.css", // fallback
          "meta.property-name.scss"
        ],
        "settings": {
          "foreground": "#00ffdd" // deep sky blue or any you like
        }
      }
    ]
  }
}
